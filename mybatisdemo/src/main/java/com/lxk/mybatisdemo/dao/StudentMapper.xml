<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lxk.mybatisdemo.dao.StudentMapper">

    <resultMap id="BaseResultMap" type="com.lxk.mybatisdemo.entity.Student">
        <result property="id" column="id" jdbcType="INTEGER"/>
        <result property="sname" column="sname" jdbcType="VARCHAR"/>
        <result property="age" column="age" jdbcType="INTEGER"/>
        <result property="sex" column="sex" jdbcType="VARCHAR"/>
        <result property="classNum" column="class_num" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="BaseResultMap">
        select
          id, sname, age, sex, class_num
        from login.student
        where id = #{id}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="BaseResultMap">
        select
          id, sname, age, sex, class_num
        from login.student
        limit #{offset}, #{limit}
    </select>

    <!--通过实体作为筛选条件查询-->
    <select id="queryAll" resultMap="BaseResultMap">
        select
        id, sname, age, sex, class_num
        from login.student
        <where>
            <if test="id != null and id != ''">
                and id = #{id}
            </if>
            <if test="sname != null and sname != ''">
                and sname = #{sname}
            </if>
            <if test="age != null">
                and age = #{age}
            </if>
            <if test="sex != null and sex != ''">
                and sex = #{sex}
            </if>
            <if test="classNum != null and classNum != ''">
                and class_num = #{classNum}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="id" useGeneratedKeys="true">
        insert into login.student(id,sname, age, sex, class_num)
        values (#{id},#{sname}, #{age}, #{sex}, #{classNum})
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update login.student
        <set>
            <if test="sname != null and sname != ''">
                sname = #{sname},
            </if>
            <if test="age != null">
                age = #{age},
            </if>
            <if test="sex != null and sex != ''">
                sex = #{sex},
            </if>
            <if test="classNum != null and classNum != ''">
                class_num = #{classNum},
            </if>
        </set>
        where id = #{id}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from login.student where id = #{id}
    </delete>

</mapper>