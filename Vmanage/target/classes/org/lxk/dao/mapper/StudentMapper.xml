<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sport.dao.StudentDao">
    <resultMap id="BaseResultMap" type="org.lxk.entity.UserEntity">
        " />
    </resultMap>
    <sql id="Base_Column_List" >
        id,name,password,code,birthday,sex,nation,college,major,nationality,entrance_date,student_type,identity,phone,native_place,status
    </sql>

    <select id="userLogin" resultType="org.lxk.entity.UserEntity">
        select
        <include refid="Base_Column_List" />
        from student
        where name = #{name,jdbcType=VARCHAR} and password = #{password,jdbcType=VARCHAR}
    </select>
</mapper>